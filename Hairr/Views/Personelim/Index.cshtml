@model IEnumerable<Hairr.Models.Personel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin.cshtml";
}


<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Şehir</th>
            <th>İşlem Uzmanlığı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PersonelId</td>
                <td>@item.Ad</td>
                <td>@item.Soyad</td>
                <td>@item.Sehir</td>
                <td>@item.Islem?.IslemAdi</td> <!-- İşlem ismini göstermek için -->
                <td>
                    <!-- Güncelle Butonu -->
                    <a asp-action="PersonelGetir" asp-route-id="@item.PersonelId"
                       class="btn btn-warning btn-sm text-dark">Güncelle</a>

                    <!-- Sil Butonu -->
                    <a asp-action="PersonelSil" asp-route-id="@item.PersonelId"
                       class="btn btn-warning btn-sm text-dark"
                       onclick="return confirm('Bu personeli silmek istediğinize emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Personel Ekle Butonu (Tablonun Altına Alındı) -->
<div class="text-center mt-3">
    <a asp-action="YeniPersonel" class="btn btn-warning text-dark">Yeni Personel Ekle</a>
</div>
