@model IEnumerable<Hairr.Models.Appointment>
@{
    ViewData["Title"] = "ApproveAppointments";
    Layout = "~/Views/Shared/Admin.cshtml";
}


<h2>Randevu Onaylama Sayfası</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Müşteri Adı</th>
            <th>İşlem</th>
            <th>Tarih</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.CustomerName</td>
                <td>@item.Islem?.IslemAdi</td>
                <td>@item.AppointmentDate</td>
                <td>@item.Status</td>
                <td>
                    <a href="/Admin/Onayla/@item.ID" class="btn btn-success">Onayla</a>
                    <a href="/Admin/Reddet/@item.ID" class="btn btn-danger">Reddet</a>
                </td>
            </tr>
        }
    </tbody>
</table>
