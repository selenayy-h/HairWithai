@model Hairr.Models.Appointment

@{
    ViewData["Title"] = "Randevu Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Layout dosyanızın yolunu kontrol edin
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <h2>Randevu Oluştur</h2>

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="CustomerName" class="control-label">Müşteri Adı</label>
                <input asp-for="CustomerName" class="form-control" placeholder="Müşteri Adını Giriniz" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AppointmentDate" class="control-label">Randevu Tarihi ve Saati</label>
                <input asp-for="AppointmentDate" type="datetime-local" class="form-control" />
                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PersonelId" class="control-label">Personel</label>
                <select asp-for="PersonelId" class="form-control" asp-items="ViewBag.Employees">
                    <option value="">-- Personel Seçiniz --</option>
                </select>
                <span asp-validation-for="PersonelId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IslemId" class="control-label">İşlem</label>
                <select asp-for="IslemId" class="form-control" asp-items="ViewBag.Services">
                    <option value="">-- İşlem Seçiniz --</option>
                </select>
                <span asp-validation-for="IslemId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Randevu Kaydet" class="btn btn-primary" />
                <a asp-action="Create" class="btn btn-secondary">İptal</a>
            </div>
        </form>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger mt-3">
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
