@model Hairr.Models.Islem

@{
    ViewData["Title"] = "Yeni İşlem Ekle";
    Layout = "~/Views/Shared/Admin.cshtml"; // Layout dosyanızın doğru olduğundan emin olun
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="YeniIslem" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="IslemAdi" class="control-label"></label>
                <input asp-for="IslemAdi" class="form-control" />
                <span asp-validation-for="IslemAdi" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Time" class="control-label">Süre (dk)</label>
                <input asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label">Fiyat (₺)</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

<!-- 'Styles' ve 'Scripts' bölümlerini sadece bir kez tanımladığınızdan emin olun -->
@section Styles {
    <style>
        /* Özel stilleriniz burada */
        .custom-form {
            background-color: #f9f9f9;
            padding: 20px;
        }
    </style>
}

@section Scripts {
